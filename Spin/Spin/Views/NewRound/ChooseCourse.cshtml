@model Spin.ViewModels.NewRoundViewModel
@{
    ViewBag.Title = "Choose Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose Course</h2>

@using (Html.BeginForm("UpdateModel", "NewRound"))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Course</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var course in Model.CourseModels)
        {
            <tr class="form-group">
                <td>@course.CourseName.ToString()</td>
                <td class="hidden">@Html.TextBoxFor(m => m.RoundModel.Id, new { @value = course.Id})</td>
                <td><button type="submit" class="btn btn-success btn-sm">Select</button></td>
            </tr>
        }
        </tbody>
    </table> 
}









