@model Spin.ViewModels.NewRoundViewModel
@{
    ViewBag.Title = "Choose Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose Course</h2>

<div class="form-group">
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Course</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var course in Model.CourseModels)
        {
            <tr>
                <td>@Html.ActionLink(course.CourseName.ToString(),"ChooseTees", "NewRound", new {courseId = course.Id}, null)</td>
            </tr>
        }
        </tbody>
    </table> 
</div>

