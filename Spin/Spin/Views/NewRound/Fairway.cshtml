@model Spin.ViewModels.NewRoundViewModel
@{
    ViewBag.Title = "Fairway";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var hole in @Model.HoleModels)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-xs-4 text-center"><h4>Hole @hole.HoleNumber</h4></div>
        <div class="col-xs-4 text-center"><h4>Par @hole.HolePar</h4></div>
        <div class="col-xs-4 text-center"><h4>@hole.HoleDistance yds</h4></div>
    </div>
}

<h1 class="text-center" style="margin-bottom: 40px">Fairway</h1>

@using (Html.BeginForm("FairwayHit", "NewRound"))
{
    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-success btn-block">Hit Fairway</button>
    </div>
}

@using (Html.BeginForm("FairwayMissed", "NewRound"))
{
    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-default btn-block">Missed Fairway</button>
    </div>
}
















